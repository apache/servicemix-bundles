    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.apache.servicemix.bundles</groupId>
        <artifactId>bundles-pom</artifactId>
        <version>16</version>
        <relativePath>../bundles-pom/pom.xml</relativePath>
    </parent>

    <groupId>org.apache.servicemix.bundles</groupId>
    <artifactId>org.apache.servicemix.bundles.spring-aspects</artifactId>
    <version>6.2.8_2-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>Apache ServiceMix :: Bundles :: ${pkgArtifactId}</name>

    <scm>
        <connection>scm:git:https://gitbox.apache.org/repos/asf/servicemix-bundles.git</connection>
        <developerConnection>scm:git:https://gitbox.apache.org/repos/asf/servicemix-bundles.git</developerConnection>
        <url>https://gitbox.apache.org/repos/asf?p=servicemix-bundles.git</url>
    <tag>HEAD</tag>
  </scm>

    <properties>
        <pkgGroupId>org.springframework</pkgGroupId>
        <pkgArtifactId>spring-aspects</pkgArtifactId>
        <pkgVersion>6.2.8</pkgVersion>
	      <servicemix.osgi.source.version>6.2.8.1</servicemix.osgi.source.version>
        <servicemix.osgi.export.pkg>
            org.springframework
        </servicemix.osgi.export.pkg>
        <servicemix.osgi.import.pkg>
            javax.cache.annotation;resolution:=optional,
            jakarta.interceptor;resolution:=optional,
            jakarta.transaction;version="[1.2,3)";resolution:=optional,
            org.aspectj.internal.lang.annotation;version="[1.8.6,3)";resolution:=optional,
            org.aspectj.lang;version="[1.8.6,3)";resolution:=optional,
            org.aspectj.lang.annotation;version="[1.8.6,3)";resolution:=optional,
            org.aspectj.lang.reflect;version="[1.8.6,3)";resolution:=optional,
            org.aspectj.runtime.internal;version="[1.8.6,3)";resolution:=optional,
            org.springframework.aop.interceptor;version="[${pkgVersion},6.3)",
            org.springframework.beans;version="[${pkgVersion},6.3)",
            org.springframework.beans.factory;version="[${pkgVersion},6.3)",
            org.springframework.beans.factory.annotation;version="[${pkgVersion},6.3)",
            org.springframework.beans.factory.aot;version="[${pkgVersion},6.3)",
            org.springframework.beans.factory.wiring;version="[${pkgVersion},6.3)",
            org.springframework.cache;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.cache.annotation;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.cache.interceptor;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.cache.jcache.config;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.cache.jcache.interceptor;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.context;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.context.annotation;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.core.annotation;version="[${pkgVersion},6.3)",
            org.springframework.core.task;version="[${pkgVersion},6.3)",
            org.springframework.dao;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.orm.jpa;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.scheduling.annotation;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.transaction;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.transaction.annotation;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.transaction.interceptor;version="[${pkgVersion},6.3)";resolution:=optional,
            org.springframework.util;version="[${pkgVersion},6.3)",
            org.springframework.util.concurrent;version="[${pkgVersion},6.3)"
        </servicemix.osgi.import.pkg>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>${pkgArtifactId}</artifactId>
            <version>${pkgVersion}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.aspectj</groupId>
                    <artifactId>aspectjweaver</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- sources -->
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>${pkgArtifactId}</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
            <exclusions>
                <exclusion>
                    <groupId>org.aspectj</groupId>
                    <artifactId>aspectjweaver</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>${pkgGroupId}:${pkgArtifactId}</include>
                                </includes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>${pkgGroupId}:${pkgArtifactId}</artifact>
                                    <includes>
                                        <include>META-INF/aop.xml</include>
                                    </includes>
                                </filter>
                            </filters>
                            <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
