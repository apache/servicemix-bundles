    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.apache.servicemix.bundles</groupId>
        <artifactId>bundles-pom</artifactId>
        <version>12</version>
        <relativePath>../bundles-pom/pom.xml</relativePath>
    </parent>

    <groupId>org.apache.servicemix.bundles</groupId>
    <artifactId>org.apache.servicemix.bundles.spring-struts</artifactId>
    <version>3.2.18.RELEASE_1</version>
    <packaging>bundle</packaging>
    <name>Apache ServiceMix :: Bundles :: ${pkgArtifactId}</name>

    <scm>
        <connection>scm:git:https://git-wip-us.apache.org/repos/asf/servicemix-bundles.git</connection>
        <developerConnection>scm:git:https://git-wip-us.apache.org/repos/asf/servicemix-bundles.git</developerConnection>
        <url>https://git-wip-us.apache.org/repos/asf?p=servicemix-bundles.git</url>
    <tag>org.apache.servicemix.bundles.spring-struts-3.2.18.RELEASE_1</tag>
  </scm>

    <properties>
        <pkgGroupId>org.springframework</pkgGroupId>
        <pkgArtifactId>spring-struts</pkgArtifactId>
        <pkgVersion>3.2.18.RELEASE</pkgVersion>
        <servicemix.osgi.export.pkg>
            org.springframework
        </servicemix.osgi.export.pkg>
        <servicemix.osgi.import.pkg>
            javax.servlet;version="[2.5,4)";resolution:=optional,
            javax.servlet.http;version="[2.5,4)";resolution:=optional,
            org.apache.commons.beanutils,
            org.apache.commons.logging;version="[1.1.1,2)";resolution:=optional,
            org.apache.struts.action;version="[1.2,3)";resolution:=optional,
            org.apache.struts.actions;version="[1.2,3)";resolution:=optional,
            org.apache.struts.config;version="[1.2,3)";resolution:=optional,
            org.apache.struts.tiles;version="[1.2,3)";resolution:=optional,
            org.apache.struts.tiles.xmlDefinition;version="[1.2,3)";resolution:=optional,
            org.apache.struts.util;version="[1.2,3)";resolution:=optional,
            org.springframework.beans;version="[${pkgVersion},3.3)",
            org.springframework.beans.factory;version="[${pkgVersion},3.3)",
            org.springframework.beans.factory.config;version="[${pkgVersion},3.3)",
            org.springframework.context;version="[${pkgVersion},3.3)",
            org.springframework.context.support;version="[${pkgVersion},3.3)",
            org.springframework.util;version="[${pkgVersion},3.3)",
            org.springframework.validation;version="[${pkgVersion},3.3)";resolution:=optional,
            org.springframework.web.context;version="[${pkgVersion},3.3)";resolution:=optional,
            org.springframework.web.context.support;version="[${pkgVersion},3.3)";resolution:=optional,
            org.springframework.web.servlet.support;version="[${pkgVersion},3.3)";resolution:=optional,
            org.springframework.web.servlet.view;version="[${pkgVersion},3.3)";resolution:=optional,
            org.springframework.web.util;version="[${pkgVersion},3.3)";resolution:=optional
        </servicemix.osgi.import.pkg>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>${pkgArtifactId}</artifactId>
            <version>${pkgVersion}</version>
            <exclusions>
                <exclusion>
                    <groupId>commons-beanutils</groupId>
                    <artifactId>commons-beanutils</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-beans</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-context</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-web</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-webmvc</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>struts</groupId>
                    <artifactId>struts</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- sources -->
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>${pkgArtifactId}</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
            <exclusions>
                <exclusion>
                    <groupId>commons-beanutils</groupId>
                    <artifactId>commons-beanutils</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-beans</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-context</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-web</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-webmvc</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>struts</groupId>
                    <artifactId>struts</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>${pkgGroupId}:${pkgArtifactId}</include>
                                </includes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>${pkgGroupId}:${pkgArtifactId}</artifact>
                                    <excludes>
                                        <exclude>**/*</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
